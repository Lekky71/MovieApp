<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_movie_details"
        android:orientation="vertical"
        android:isScrollContainer="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MovieDetails">

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">

            <ImageView
                    android:id="@+id/movieDp" android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ic_dashboard_black_24dp"/>



            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginTop="5dp"
                      android:textSize="14sp"
                      android:layout_marginLeft="20dp"
                      android:fontFamily="sans-serif-smallcaps"
                      android:layout_marginRight="15dp"
                      android:id="@+id/movieName"
                      tools:text="Promise"/>


            <android.support.v7.widget.CardView android:layout_width="match_parent"
                                                android:layout_marginTop="10dp"
                                                android:layout_marginBottom="5dp"
                                                android:layout_height="wrap_content">

                <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:paddingRight="15dp"
                                android:paddingLeft="15dp">

                    <TextView android:id="@+id/head"
                              android:layout_marginTop="5dp"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:textSize="18sp"
                              android:fontFamily="sans-serif-smallcaps"
                              android:text="About Movie :"/>

                    <TextView
                            android:id="@+id/aboutMovie"
                            android:layout_below="@id/head"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp"
                            android:fontFamily="casual"
                            android:layout_margin="5dp"
                            tools:text="Michael Jackson died and came back to life to restore himself to greatness"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView android:layout_width="match_parent"
                                                android:layout_marginTop="5dp"
                                                android:layout_marginBottom="5dp"
                                                android:layout_height="wrap_content">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:paddingRight="10dp"
                              android:paddingLeft="10dp"
                              android:orientation="vertical">

                    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:orientation="horizontal"
                                  android:padding="5dp">

                        <TextView android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:textSize="18sp"
                                  android:fontFamily="sans-serif-smallcaps"
                                  android:text="Release Date : "/>

                        <TextView
                                android:id="@+id/date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="casual"
                                style="@style/alignment_sub"
                                tools:text="12-01-2019"/>
                    </LinearLayout>

                    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:padding="5dp" android:orientation="horizontal">

                    <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Movie    Lang : "/>

                    <TextView
                    android:id="@+id/language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="casual"
                    style="@style/alignment_sub"
                    tools:text="English"/>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="5dp"
                                                android:layout_marginBottom="5dp" android:gravity="center">
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:paddingLeft="10dp"
                              android:paddingRight="10dp"
                              android:orientation="vertical">


                    <!--<RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"-->
                    <!--android:padding="5dp">-->

                    <!--&lt;!&ndash;<TextView android:id="@+id/pop"&ndash;&gt;-->
                    <!--&lt;!&ndash;android:layout_width="match_parent"&ndash;&gt;-->
                    <!--&lt;!&ndash;android:layout_height="wrap_content"&ndash;&gt;-->
                    <!--&lt;!&ndash;android:textSize="18sp"&ndash;&gt;-->
                    <!--&lt;!&ndash;android:fontFamily="sans-serif-smallcaps"&ndash;&gt;-->
                    <!--&lt;!&ndash;android:text="Popularity :"/>&ndash;&gt;-->
                    <!--&lt;!&ndash;<TextView&ndash;&gt;-->
                    <!--&lt;!&ndash;android:layout_below="@id/pop"&ndash;&gt;-->
                    <!--&lt;!&ndash;android:id="@+id/reviews"&ndash;&gt;-->
                    <!--&lt;!&ndash;android:layout_width="wrap_content"&ndash;&gt;-->
                    <!--&lt;!&ndash;android:layout_height="wrap_content"&ndash;&gt;-->
                    <!--&lt;!&ndash;android:layout_marginTop="0dp"&ndash;&gt;-->
                    <!--&lt;!&ndash;android:paddingBottom="5dp"&ndash;&gt;-->
                    <!--&lt;!&ndash;android:fontFamily="casual"&ndash;&gt;-->
                    <!--&lt;!&ndash;android:layout_margin="5dp"&ndash;&gt;-->
                    <!--&lt;!&ndash;tools:text="This is one of the best movie I've seen so far.. It has the most special kind of effects "/>&ndash;&gt;-->


                    <!--</RelativeLayout>-->

                    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:padding="5dp" android:orientation="horizontal">

                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:id="@+id/rate"
                                  android:fontFamily="sans-serif-smallcaps"
                                  android:layout_gravity="center"
                                  android:textSize="18sp"
                                  android:text="Rating : "/>

                        <RatingBar
                                android:id="@+id/ratingBar"
                                android:layout_width="242dp"
                                android:layout_height="49dp"
                                android:numStars="5"
                                android:scaleX="0.5"
                                android:scaleY="0.5"
                                android:visibility="visible"/>

                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_margin="5dp">


            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>

</LinearLayout>